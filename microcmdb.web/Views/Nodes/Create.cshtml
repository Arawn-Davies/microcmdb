@model microcmdb.Web.Models.Node

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Node</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OS_Version" class="control-label"></label>
                <input asp-for="OS_Version" class="form-control" />
                <span asp-validation-for="OS_Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPU_Arch" class="control-label"></label>
                <input asp-for="CPU_Arch" class="form-control" />
                <span asp-validation-for="CPU_Arch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RAM" class="control-label"></label>
                <input asp-for="RAM" class="form-control" />
                <span asp-validation-for="RAM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Storage" class="control-label"></label>
                <input asp-for="Storage" class="form-control" />
                <span asp-validation-for="Storage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IPaddr" class="control-label"></label>
                <input asp-for="IPaddr" class="form-control" />
                <span asp-validation-for="IPaddr" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CINodeMapping.ConfigItemID" class="control-label">Associated ConfigItem</label>
                <select asp-for="CINodeMapping.ConfigItemID" class="form-control">
                    <option value="">-- Select ConfigItem --</option>
                    @foreach (var configItem in ViewBag.ConfigItems)
                    {
                        <option value="@configItem.ConfigItemID">@configItem.Name</option>
                    }
                </select>
                <span asp-validation-for="CINodeMapping.ConfigItemID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
